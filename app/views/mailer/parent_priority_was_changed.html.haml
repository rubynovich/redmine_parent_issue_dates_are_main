%h1= link_to (l(:field_issue)+" " +@issue_title), issue_path(@issue, only_path: false)
%ul
  %li= l(:field_author) + ":" + @author
  %li= l(:field_status) + ":" + @status
  %li= l(:field_priority) + ":" + @priority
  %li= l(:field_assigned_to)  + ":" + @assigned_to